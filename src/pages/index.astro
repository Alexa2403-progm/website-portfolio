      </TitleSectionH2>
      <Projects />
      <SkillsSection />
    </SectionContainer>
    <SectionContainer id="about">
      <TitleSectionH2>
        <ProfileIcons class="size-7" />
        Quien Soy
      </TitleSectionH2>
      <AboutMeSection />
    </SectionContainer>
    <!-- <SectionContainer id="blog" class="flex flex-col gap-6">
      <TitleSectionH2>
        <BlogIcons class="size-7" />
        Blog
      </TitleSectionH2>
    </SectionContainer> -->
    <SectionContainer id="contact" class="flex flex-col gap-6 mb-10">
      <TitleSectionH2>
        <ContactIcons class="size-7" />
        Contacto
      </TitleSectionH2>
      <Contact />
    </SectionContainer>
  </main>
</Layout>
