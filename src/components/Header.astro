---
import ImgLogo from "./ImgLogo.astro";
---

<header
  class="sticky top-2 z-50 dark:text-zinc-200 bg-dark/90 backdrop-blur-xs dark:backdrop-blur-md py-2 w-full mx-auto max-w-[920px] border rounded-xl border-purple-400"
>
  <div class="flex flex-wrap justify-between items-center mx-auto w-full px-4">
    <a
      href="/"
      class="flex flex-wrap space-x-3 rtl:space-x-reverse"
      aria-label="Ir a Incio"
    >
      <ImgLogo title="Logo" />
      <span
        class="self-center text-xl font-semibold whitespace-nowrap text-zinc-300"
        >AlexaDev</span
      >
    </a>
    <nav class="flex items-center space-x-2">
      <ul
        id="menu-desktop"
        class="hidden md:flex flex-row gap-8 items-center text-zinc-300 text-lg font-medium"
      >
        <li class="hover:text-purple-300 hover:scale-105 transition">
          <a href="#home">Inicio</a>
        </li>
        <li class="hover:text-purple-300 hover:scale-105 transition">
          <a href="#projects">Proyectos</a>
        </li>
        <li class="hover:text-purple-300 hover:scale-105 transition">
          <a href="#about">Quien Soy</a>
        </li>
        <!-- <li class=" hover:text-purple-300 hover:scale-105 transition">
        <a href="#blog">Blog</a>
       </li> -->
        <li class="hover:text-purple-300 hover:scale-105 transition">
          <a href="#contact">Contacto</a>
        </li>
      </ul>
    </nav>
  </div>
</header>
